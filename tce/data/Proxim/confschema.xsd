<?xml version="1.0"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

<!-- ACTION NAMES -->
<xsd:simpleType name="action-type">
    <xsd:restriction base="xsd:string">
        <xsd:enumeration value="Open Machine"/>
        <xsd:enumeration value="Open Program"/>
        <xsd:enumeration value="Quit"/>
        <xsd:enumeration value="Simulator Settings"/>
        <xsd:enumeration value="Options"/>
        <xsd:enumeration value="Run"/>
        <xsd:enumeration value="Resume"/>
        <xsd:enumeration value="Kill"/>
        <xsd:enumeration value="StepI"/>
        <xsd:enumeration value="NextI"/>
        <xsd:enumeration value="New Register Window"/>
        <xsd:enumeration value="New Port Window"/>
        <xsd:enumeration value="CD"/>
        <xsd:enumeration value="About"/>
    </xsd:restriction>
</xsd:simpleType>

<!-- WINDOW -->
<xsd:complexType name="window-type">
    <xsd:sequence>
        <xsd:element name="full-screen" type="xsd:boolean"/>
        <xsd:element name="width">
            <xsd:simpleType>
                <xsd:restriction base="xsd:integer">
                    <xsd:minInclusive value="1"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:element>
        <xsd:element name="height">
            <xsd:simpleType>
                <xsd:restriction base="xsd:integer">
                    <xsd:minInclusive value="1"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:element>
        <xsd:element name="x-position">
            <xsd:simpleType>
                <xsd:restriction base="xsd:integer">
                    <xsd:minInclusive value="0"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:element>
        <xsd:element name="y-position">
            <xsd:simpleType>
                <xsd:restriction base="xsd:integer">
                    <xsd:minInclusive value="0"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:element>
    </xsd:sequence>
</xsd:complexType>


<!-- TOOLBAR -->
<xsd:complexType name="toolbar-type">
    <xsd:sequence>
        <xsd:element name="layout">
            <xsd:complexType>
                <xsd:sequence>
                    <xsd:choice>
                        <xsd:element name="text"/>
                        <xsd:element name="icon"/>
                    </xsd:choice>
                    <xsd:choice minOccurs="0">
                        <xsd:element name="text"/>
                        <xsd:element name="icon"/>
                    </xsd:choice>
                </xsd:sequence>        
            </xsd:complexType>
        </xsd:element>
        <xsd:element name="visible" type="xsd:boolean"/>
        <xsd:element name="slot" minOccurs="0" maxOccurs="unbounded">
            <xsd:complexType>
                <xsd:sequence>
                    <xsd:element name="action" type="xsd:string"/>
                </xsd:sequence>
                <xsd:attribute name="position" use="required">
                    <xsd:simpleType>
                        <xsd:restriction base="xsd:integer">
                            <xsd:minInclusive value="0"/>
                        </xsd:restriction>
                    </xsd:simpleType>
                </xsd:attribute>
            </xsd:complexType>
        </xsd:element>
        <xsd:element name="separator" minOccurs="0" maxOccurs="unbounded">
            <xsd:complexType>
                <xsd:attribute name="position" use="required"> 
                    <xsd:simpleType>
                        <xsd:restriction base="xsd:integer">
                            <xsd:minInclusive value="0"/>
                        </xsd:restriction>
                    </xsd:simpleType>
                </xsd:attribute>
            </xsd:complexType>
        </xsd:element>
    </xsd:sequence>
</xsd:complexType>

<!-- KEYBOARD SHORTCUT -->
<xsd:complexType name="keyboard-shortcut-type">
    <xsd:sequence>
        <xsd:element name="key-combination">
            <xsd:complexType>
                <xsd:sequence>
                    <xsd:choice>
                        <xsd:sequence>
                            <xsd:element name="ctrl"/>
                            <xsd:choice>
                                <xsd:element ref="key"/>
                                <xsd:element ref="F-key"/>
                                <xsd:sequence>
                                    <xsd:element name="alt"/>
                                    <xsd:choice>
                                        <xsd:element ref="key"/>
                                        <xsd:element ref="F-key"/>
                                    </xsd:choice> 
                                </xsd:sequence>    
                            </xsd:choice>
                        </xsd:sequence>
                        <xsd:sequence>
                            <xsd:element name="alt"/>
                            <xsd:choice>
                                <xsd:element ref="key"/>
                                <xsd:element ref="F-key"/>
                            </xsd:choice> 
                        </xsd:sequence>
                        <xsd:sequence>
                            <xsd:element ref="F-key"/>
                        </xsd:sequence>
                    </xsd:choice>
                </xsd:sequence>
            </xsd:complexType>
        </xsd:element>
        <xsd:element name="action" type="action-type"/>
    </xsd:sequence>
</xsd:complexType>
                
<xsd:element name="F-key">
    <xsd:complexType>
        <xsd:attribute name="number" use="required">
            <xsd:simpleType>
                <xsd:restriction base="xsd:integer">
                    <xsd:minInclusive value="1"/>
                    <xsd:maxInclusive value="12"/>
                </xsd:restriction>
            </xsd:simpleType>
        </xsd:attribute>
    </xsd:complexType>
</xsd:element>

